    }

    .text-right {
        text-align: right !important;
    }

    .copy-icon {
        cursor: pointer;
        margin-left: 10px;
        color: #007bff;
        font-size: 16px;
    }

        .copy-icon:hover {
            color: #0056b3;
        }

